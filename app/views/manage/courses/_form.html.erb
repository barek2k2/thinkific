<%= form_for [:manage, @course] do |f| %>
  <%= f.text_field :name, placeholder: "Name" %> <br />
  <%= f.text_field :subtitle, placeholder: "subtitle" %> <br />
  <%= f.text_area :description, placeholder: "description" %> <br />
  <%= f.text_field :price, placeholder: "price" %> <br />
  <%= f.text_field :duration, placeholder: "duration" %> <br />
  <%= f.submit %>
<% end %>