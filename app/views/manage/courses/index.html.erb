<div class="row">
  <div class="col-md-6">
    <h2 class="pull-left">Courses</h2>
  </div>
  <div class="col-md-6">
    <%= link_to "New Course", new_manage_course_path, class: 'btn btn-primary pull-right' %>
  </div>
</div>

<table class=" table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Subtitle</th>
      <th>Price</th>
      <th>Duration</th>
      <th>Chapters</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.subtitle %></td>
      <td><%= number_to_currency course.price %></td>
      <td><%= course.duration %></td>
      <td><%= link_to course.chapters.count, manage_course_chapters_path(course) %></td>
      <td>
        <%= link_to "Edit", edit_manage_course_path(course), class: 'btn btn-success' %>
        <%= link_to "Add Chapter", new_manage_course_chapter_path(course), class: 'btn btn-success' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @courses, renderer: BootstrapPagination::Rails %>