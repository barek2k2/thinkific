<h2> <%= breadcrumbs %> Contents</h2>

<%= link_to "New content", new_manage_course_chapter_content_path(@course), class: 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Chapter</th>
      <th>Content Type</th>
      <th>Multimedia(attached)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contents.each do |content| %>
    <tr>
      <td><%= content.title %></td>
      <td><%= content.chapter.title %></td>
      <td><%= content.content_type %></td>
      <td><%= content.files.count %></td>
      <td>
        <%= link_to "Edit", edit_manage_course_chapter_content_path(@course, @chapter, content), class: 'btn btn-success' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>